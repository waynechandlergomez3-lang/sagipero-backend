generator client {
  provider = "prisma-client-js"
  output   = "../src/generated/prisma"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model Article {
  id          String   @id
  url         String
  title       String
  description String?
  imageUrl    String?
  source      String?
  createdAt   DateTime @default(now())
  updatedAt   DateTime
}

model CommonAllergy {
  id          String   @id
  name        String   @unique
  category    String
  description String?
  createdAt   DateTime @default(now())
}

model CommonMedicalCondition {
  id          String   @id
  name        String   @unique
  category    String
  description String?
  createdAt   DateTime @default(now())
}

model Emergency {
  id                               String            @id
  type                             String
  description                      String
  status                           EmergencyStatus   @default(PENDING)
  isFraud                          Boolean           @default(false)
  location                         Json
  userId                           String
  responderId                      String?
  createdAt                        DateTime          @default(now())
  updatedAt                        DateTime
  address                          String?
  evacuationId                     String?
  priority                         Int               @default(1)
  resolvedAt                       DateTime?
  responseNotes                    String?
  responderLocation                Json?
  EvacuationCenter                 EvacuationCenter? @relation(fields: [evacuationId], references: [id])
  User_Emergency_responderIdToUser User?             @relation("Emergency_responderIdToUser", fields: [responderId], references: [id])
  User_Emergency_userIdToUser      User              @relation("Emergency_userIdToUser", fields: [userId], references: [id])

  @@index([responderId])
  @@index([status])
  @@index([userId])
}

model EmergencyHistory {
  id          String   @id @default(dbgenerated("gen_random_uuid()"))
  emergencyId String   @map("emergency_id")
  eventType   String   @map("event_type")
  payload     Json?
  createdAt   DateTime @default(now()) @map("created_at")

  @@index([emergencyId])
  @@map("emergency_history")
}

model EmergencyHotline {
  id          String  @id
  name        String
  number      String
  description String?
  isActive    Boolean @default(true)
}

model EvacuationCenter {
  id            String      @id
  name          String
  address       String
  capacity      Int
  location      Json
  isActive      Boolean     @default(true)
  createdAt     DateTime    @default(now())
  updatedAt     DateTime
  contactNumber String?
  currentCount  Int         @default(0)
  facilities    Json?
  Emergency     Emergency[]
}

model Location {
  id        String   @id
  latitude  Float
  longitude Float
  userId    String   @unique
  updatedAt DateTime
  User      User     @relation(fields: [userId], references: [id])
}

model Notification {
  id        String   @id @default(cuid())
  userId    String
  type      String
  title     String
  message   String
  data      Json?
  isRead    Boolean  @default(false)
  createdAt DateTime @default(now())
  User      User     @relation(fields: [userId], references: [id])

  @@index([userId])
}

model User {
  id                                    String                @id
  email                                 String                @unique
  password                              String
  name                                  String
  phone                                 String?
  role                                  UserRole              @default(RESIDENT)
  address                               String?
  createdAt                             DateTime              @default(now())
  updatedAt                             DateTime
  bloodType                             String?
  deviceToken                           String?
  emergencyContact                      Json?
  medicalInfo                           Json?
  notificationPrefs                     Json                  @default("{\"system\": true, \"weather\": true, \"emergency\": true}")
  situationDetails                      String?
  situationUpdatedAt                    DateTime?
  situationStatus                       SituationStatus       @default(SAFE)
  specialCircumstances                  SpecialCircumstance[] @default([NONE])
  medicalConditions                     String[]              @default([])
  allergies                             String[]              @default([])
  emergencyContactName                  String?
  emergencyContactPhone                 String?
  emergencyContactRelation              String?
  barangay                              String?
  responderStatus                       ResponderStatus?      @default(AVAILABLE)
  Emergency_Emergency_responderIdToUser Emergency[]           @relation("Emergency_responderIdToUser")
  Emergency_Emergency_userIdToUser      Emergency[]           @relation("Emergency_userIdToUser")
  Location                              Location?
  Notification                          Notification[]
  Vehicles                              Vehicle[]
  UserDocument                          UserDocument[]
  inventoryItems                         InventoryItem[]
}

model Vehicle {
  id          String   @id @default(dbgenerated("gen_random_uuid()"))
  responderId String
  plateNumber String?
  model       String?
  color       String?
  active      Boolean  @default(true)
  createdAt   DateTime @default(now())
  updatedAt   DateTime

  User        User     @relation(fields: [responderId], references: [id], onDelete: Cascade)

  @@index([responderId])
}

model InventoryItem {
  id          String   @id @default(dbgenerated("gen_random_uuid()"))
  responderId String?
  name        String
  sku         String?
  quantity    Int      @default(0)
  unit        String?
  notes       String?
  isActive    Boolean  @default(true)
  available   Boolean  @default(true)
  createdAt   DateTime @default(now())
  updatedAt   DateTime

  User        User?    @relation(fields: [responderId], references: [id], onDelete: Cascade)

  @@index([responderId])
}

model UserDocument {
  id        String   @id
  userId    String
  type      String
  fileUrl   String
  verified  Boolean  @default(false)
  createdAt DateTime @default(now())
  updatedAt DateTime
  User      User     @relation(fields: [userId], references: [id], onDelete: Cascade)

  @@unique([userId, type])
}

model WeatherAlert {
  id            String    @id
  type          String
  severity      String
  title         String
  description   String
  source        String
  location      Json
  startsAt      DateTime
  endsAt        DateTime?
  isActive      Boolean   @default(true)
  createdAt     DateTime  @default(now())
  updatedAt     DateTime
  area          Json?
  daily         Boolean   @default(false)
  hourlyIndexes Json?     @default("[]")
  message       String?
}

enum EmergencyStatus {
  PENDING
  ACKNOWLEDGED
  IN_PROGRESS
  RESOLVED
  ACCEPTED
  ARRIVED
}

enum ResponderStatus {
  AVAILABLE
  ON_DUTY
  VEHICLE_UNAVAILABLE
  OFFLINE
}

enum SituationStatus {
  SAFE
  NEED_ASSISTANCE
  EMERGENCY
}

enum SpecialCircumstance {
  PREGNANT
  PWD
  ELDERLY
  CHILD
  WITH_INFANT
  NONE
}

enum UserRole {
  RESIDENT
  ADMIN
  RESPONDER
}
